{
    "info": {
        "name": "Sample API Collection",
        "description": "A sample Postman collection for testing the API integration",
        "version": "1.0.0"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "https://jsonplaceholder.typicode.com",
            "type": "string"
        },
        {
            "key": "userId",
            "value": "1",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Users",
            "item": [
                {
                    "name": "Get All Users",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/users",
                            "host": ["{{baseUrl}}"],
                            "path": ["users"]
                        }
                    }
                },
                {
                    "name": "Get User by ID",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/users/{{userId}}",
                            "host": ["{{baseUrl}}"],
                            "path": ["users", "{{userId}}"]
                        }
                    }
                },
                {
                    "name": "Create User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"John Doe\",\n  \"username\": \"johndoe\",\n  \"email\": \"john@example.com\",\n  \"phone\": \"123-456-7890\",\n  \"website\": \"johndoe.com\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/users",
                            "host": ["{{baseUrl}}"],
                            "path": ["users"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Posts",
            "item": [
                {
                    "name": "Get All Posts",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/posts?_limit=10",
                            "host": ["{{baseUrl}}"],
                            "path": ["posts"],
                            "query": [
                                {
                                    "key": "_limit",
                                    "value": "10"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Posts by User",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/posts?userId={{userId}}",
                            "host": ["{{baseUrl}}"],
                            "path": ["posts"],
                            "query": [
                                {
                                    "key": "userId",
                                    "value": "{{userId}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Create Post",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"My New Post\",\n  \"body\": \"This is the content of my new post.\",\n  \"userId\": {{userId}}\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/posts",
                            "host": ["{{baseUrl}}"],
                            "path": ["posts"]
                        }
                    }
                }
            ]
        }
    ]
}